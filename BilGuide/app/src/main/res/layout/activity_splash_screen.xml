<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".SplashScreenActivity">

    <ImageView
        android:id="@+id/imageBilGuide"
        android:layout_width="309dp"
        android:layout_height="637dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bilguidewithouttype" />

    <ImageView
        android:id="@+id/imageViewAppName"
        android:layout_width="234dp"
        android:layout_height="320dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageBilGuide"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageBilGuide"
        app:srcCompat="@drawable/bilguidetype" />

    <TextView
        android:id="@+id/textViewG1K"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="92dp"
        android:fontFamily="@font/baloo_tamma"
        android:text="by g1K"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageBilGuide"
        app:layout_constraintStart_toEndOf="@+id/imageBilGuide" />
</androidx.constraintlayout.widget.ConstraintLayout>